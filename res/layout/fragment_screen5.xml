<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/botmovementbg"
    tools:context="com.example.klugtek.ScreenLetsPlay" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
       
        android:layout_marginLeft="0dp"
        android:paddingBottom="10dp" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="200dp"
            android:layout_height="68dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/custom_design_backbtn1" />

        <ImageButton
            android:id="@+id/imageButton2"
           android:layout_width="200dp"
            android:layout_height="68dp"
           
            android:layout_alignParentRight="true"
          
            android:background="@drawable/custom_design_nextbtn" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/toplayer"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >
    </LinearLayout>

    
    
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/relativeLayout1"
        android:layout_marginLeft="113dp"
        android:background="@drawable/stepbg1" >

        <ImageView
            android:id="@+id/botforward"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ckbot" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="130dp"
        android:layout_height="220dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/toplayer"
        android:background="@drawable/rotatebg1" >

        <ImageView
            android:id="@+id/botclockwise"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ckbot" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="130dp"
        android:layout_height="220dp"
       android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/toplayer"
        android:background="@drawable/center" >

	<ImageView
	    android:id="@+id/thumb"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:background="@drawable/selector" />
      
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignTop="@+id/toplayer"
        android:layout_toLeftOf="@+id/relativeLayout1"
        android:background="@drawable/anglewheeel" >
	<ImageView
            android:id="@+id/pointer"
            android:layout_width="44dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/arrowhead"
            />
    </RelativeLayout>

</RelativeLayout>