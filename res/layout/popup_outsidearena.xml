<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeresetbot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#80000000"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialoglabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foul !!"
            android:textSize="20dp"
            android:layout_marginBottom="20dp" />
        
        <TextView
            android:id="@+id/dialoglabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please  relocate  the  Bot"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="50dp"
            android:orientation="horizontal" >

   
            <Button
            android:id="@+id/btnnoforfoul"
            android:layout_width="200dp"
            android:layout_height="68dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/custom_design_no" />
            
            
    <Button
        android:id="@+id/btnyesforfoul" 
        android:layout_width="200dp"
        android:layout_height="68dp"
      
        android:background="@drawable/custom_design_yes"
        android:gravity="center"
       />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>