<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
   
   
      android:id="@+id/popupwaitingforplayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible" 
    android:background="#80000000"
    android:gravity="center">
    

    <LinearLayout android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
      
       android:gravity="center">
    
    
    
   <LinearLayout android:layout_width="wrap_content"
       android:layout_height="30dp"
       android:orientation="horizontal"
       
       android:gravity="center">
       
     
       <TextView
           android:id="@+id/dialoglabel1" 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" WAITING  FOR  "
           android:textSize="20dp"/>
       
       <TextView
           android:id="@+id/opponentname" 
            android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="RANJEET "
           android:textSize="20dp"/>
       
       <TextView 
           android:id="@+id/dialoglabel2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="  TO  AGREE"
           android:textSize="20dp"/>
       
   </LinearLayout> 
   
   	<TextView android:id="@+id/dialoglabel3"
   	    android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" PLEASE  WAIT"
           android:layout_marginTop="5dp"
          
           android:textSize="20dp"/>
   	
   	<ImageView 
   	    android:id="@+id/load"
   	    android:layout_width="60dp"
   	    android:layout_height="60dp"
   	    android:layout_marginTop="30dp"
   	    android:background="@drawable/waitccon"/>
   
    </LinearLayout>
    
    
    
</RelativeLayout>  