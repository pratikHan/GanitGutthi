<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   
   
   
     android:id="@+id/popupwrongpawnTouched"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible" 
    android:background="#80000000"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:gravity="center"
        
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                
                android:id="@+id/dialoglabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOU  HAVE  TOUCHED  "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#FF0000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/dialoglabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" WRONG  PAWN"
                android:textColor="#FF0000"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialoglabel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=" DO  YOU  AGREE ?"
            android:textSize="17dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:paddingBottom="10dp" >

        <Button
            android:id="@+id/buttonno"
            android:layout_width="200dp"
            android:layout_height="68dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/custom_design_no" />

        <Button
            android:id="@+id/buttonyes"
            android:layout_width="200dp"
            android:layout_height="68dp"
            android:layout_toRightOf="@+id/buttonno"
            android:background="@drawable/custom_design_yes" />
    </RelativeLayout>
    
</RelativeLayout>  